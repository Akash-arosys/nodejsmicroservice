{
  "name": "gmat-backend-shared",
  "version": "1.0.0",
  "type": "module",
  "description": "GMAT Test Series Microservices",
  "private": true,
  "workspaces": [
    "api-gateway",
    "user-service",
    "test-service",
    "question-service",
    "result-service"
  ],
  "scripts": {
    "dev:user": "cd services/user-service && nodemon --watch src --ext ts,js,json --exec \"node --loader ts-node/esm src/app.ts\"",
    "dev:test": "cd services/test-service && nodemon --watch src --ext ts,js,json --exec \"node --loader ts-node/esm src/app.ts\"",
    "dev:question": "cd services/question-service && nodemon --watch src --ext ts,js,json --exec \"node --loader ts-node/esm src/app.ts\"",
    "dev:result": "cd services/result-service && nodemon --watch src --ext ts,js,json --exec \"node --loader ts-node/esm src/app.ts\"",
    "dev:gateway": "cd api-gateway && nodemon --watch src --ext ts,js,json --exec \"node --loader ts-node/esm src/app.ts\"",
    "dev:all": "concurrently \"npm:dev:user\" \"npm:dev:test\" \"npm:dev:question\" \"npm:dev:result\" \"npm:dev:gateway\""
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.3",
    "kafkajs": "^2.2.4",
    "mysql2": "^3.15.3",
    "redis": "^5.10.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.28",
    "uuid": "^13.0.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.3",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/express-http-proxy": "^1.6.7",
    "@types/http-proxy-middleware": "^0.19.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.2",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  }
}
